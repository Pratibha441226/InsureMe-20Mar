pipeline {
  agent any

  stages {
    stage('CheckOut') {
      steps {
        echo 'Checkout the source code from GitHub'
        git branch: 'main', url: 'https://github.com/Pratibha441226/InsureMe-20Mar.git'
            }
    }
    
    stage('Package the Application') {
      steps {
        echo " Packaing the Application"
        sh 'mvn clean package'
            }
    }
    stage('Docker Image Creation') {
      steps {
        sh 'docker build -t pratibha012/insure:1.0 .'
            }
    }
    stage('DockerLogin') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'dockercreds3', passwordVariable: 'dokerpassword', usernameVariable: 'dockerlogin')]) {
        sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
}
            }
    }

    stage('Push Image to DockerHub') {
      steps {
        sh 'docker push pratibha012/insure:1.0'
            }
    }
    stage('Deploy Application using Ansible') {
      steps {
        ansiblePlaybook become: true, credentialsId: 'sshid', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'deploy.yml', vaultTmpPath: ''
    }
    }
  }
}

